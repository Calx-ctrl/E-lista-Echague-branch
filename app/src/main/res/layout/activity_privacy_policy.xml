<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <!-- Green Curved Header -->
    <ImageView
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:src="@drawable/header_background_curve"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Title -->

    <!-- Scrollable FAQ Content -->

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollPrivacy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/PrivacyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="Lorem ipsum dolor sit amet consectetur. Feugiat sodales urna ac turpis cras.
Turpis fermentum elementum turpis libero tristique turpis. Diam justo nunc iaculis tincidunt posuere at consequat morbi.
Scelerisque sed risus magna egestas adipiscing. Quam enim vestibulum in risus blandit.
Fermentum consectetur bibendum sed molestie netus.
Sed in risus sit faucibus purus amet morbi.
Purus turpis diam felis ac quam mauris aliquam. Donec donec ac sed facilisi leo tempus id."/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
