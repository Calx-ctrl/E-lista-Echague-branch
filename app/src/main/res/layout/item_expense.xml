<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="UseCompoundDrawables">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="14dp">

        <!-- Expense Category Icon -->
        <ImageView
            android:id="@+id/categoryIconImageView"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="12dp"
            android:padding="6dp"
            android:src="@drawable/ic_category_placeholder"
            android:background="@drawable/icon_background_circle"
            android:contentDescription="@string/expense_category_icon"
            android:scaleType="centerInside"
            app:tint="@color/black" />

        <!-- Expense Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/categoryNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textColor="#222222"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Groceries" />

            <TextView
                android:id="@+id/expenseDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Oct 10, 2025"
                android:textColor="#777777"
                android:textSize="13sp"
                tools:text="Oct 12, 2025" />
        </LinearLayout>

        <!-- Expense Amount -->
        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:gravity="end"
            android:text="₱0.00"
            android:textColor="#16a085"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="₱150.00" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
