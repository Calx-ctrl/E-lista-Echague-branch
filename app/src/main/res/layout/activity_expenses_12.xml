<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6FAFB"
    tools:context=".Expenses12Activity">

    <!-- Curved Header -->
    <ImageView
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/header_background_curve"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expenses"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/headerBackground"
        app:layout_constraintBottom_toBottomOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <!-- Add Expense Button -->

    <!-- Filter Row: All / Daily / Weekly / Monthly -->
    <LinearLayout
        android:id="@+id/filterRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/filterAll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:text="All"
            android:background="@drawable/rounded_filter"
            android:textColor="@android:color/black"
            android:paddingHorizontal="12dp"/>

        <Button
            android:id="@+id/filterDaily"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:text="Daily"
            android:background="@drawable/rounded_filter"
            android:textColor="@android:color/black"
            android:layout_marginStart="4dp"
            android:paddingHorizontal="12dp"/>

        <Button
            android:id="@+id/filterWeekly"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:text="Weekly"
            android:background="@drawable/rounded_filter"
            android:textColor="@android:color/black"
            android:layout_marginStart="4dp"
            android:paddingHorizontal="12dp"/>

        <Button
            android:id="@+id/filterMonthly"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:text="Monthly"
            android:background="@drawable/rounded_filter"
            android:textColor="@android:color/black"
            android:layout_marginStart="4dp"
            android:paddingHorizontal="12dp"/>
    </LinearLayout>

    <!-- RecyclerView for Expenses -->

    <!-- Floating Camera Button -->

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterRow"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/expenseListContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="0dp"
            android:paddingVertical="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/expenseRecycler"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="16dp"
                app:layout_constraintBottom_toTopOf="@id/fabCamera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filterRow" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:contentDescription="Camera"
        android:src="@drawable/ic_camera"
        app:backgroundTint="#16a085"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@android:color/white" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/nav_item_selector"
        app:itemTextColor="@color/nav_item_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_green"
        android:text="Add Expense"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fabCamera"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
