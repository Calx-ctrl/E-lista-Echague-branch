<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/dialogContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/white_box_rounded">

        <!-- Icon Preview -->
        <ImageView
            android:id="@+id/iconPreview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_palette"
            android:contentDescription="Selected icon"
            android:layout_marginBottom="8dp" />

        <!-- Change Icon Button (Add mode only) -->
        <Button
            android:id="@+id/btnChangeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Change Icon"
            android:textAllCaps="false"
            android:backgroundTint="#1ABC9C"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:visibility="visible" />

        <!-- Category Dropdown (Spinner) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_input"
                android:padding="8dp"
                android:backgroundTint="@null"/>

            <EditText
                android:id="@+id/Total"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Total: "
                android:background="@drawable/rounded_input"
                android:padding="8dp"
                android:focusable="false"
                android:cursorVisible="false"
                android:longClickable="false"
                android:inputType="none"
                />

        </LinearLayout>

        <!-- Name Input -->
        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:hint="Name"
            android:background="@drawable/rounded_input"
            android:padding="8dp" />

        <!-- Date Input -->
        <EditText
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_input"
            android:gravity="top"
            android:hint="Description/Receipt ID (optional)"
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <EditText
            android:id="@+id/inputDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:hint="Date"
            android:focusable="false"
            android:background="@drawable/rounded_input"
            android:padding="8dp"/>

        <LinearLayout
            android:id="@+id/itemContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <!-- Description Input -->

        <!-- Done Button -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Done"
            android:textAllCaps="false"
            android:backgroundTint="#1ABC9C"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
